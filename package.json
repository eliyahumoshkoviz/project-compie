{
  "name": "nestjs-starter",
  "version": "0.0.0",
  "description": "Gal Starter",
  "author": "Gal Batz",
  "license": "MIT",
  "scripts": {
    "webpack": "webpack --config webpack.config.js",
    "build": "tsc -p tsconfig.build.json",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "typeorm:cli": "ts-node ./node_modules/typeorm/cli",
    "hmr": "node dist/server",
    "inspect:lint": "eslint './src/**/*.ts'",
    "inspect:lint:fix": "eslint './src/**/*.ts' --fix",
    "inspect:test": "jest --passWithNoTests",
    "inspect:test:watch": "jest --watch",
    "inspect:test:cov": "jest --coverage --passWithNoTests",
    "inspect:test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "inspect:test:e2e": "jest --config ./test/jest-e2e.json",
    "inspect:license": "license-checker --failOn GPLv2 --summary",
    "inspect:vulnerabilities": "npm audit",
    "inspect:outdated": "npm outdated || true",
    "prettier:base": "prettier --parser typescript --single-quote",
    "prettier:check": "npm run prettier:base -- --list-different \"src/**/*.ts\"",
    "prettier:write": "npm run prettier:base -- --write \"src/**/*.ts\"",
    "inspect:all": "concurrently -c \"bgBlue.bold,bgMagenta.bold,yellow\" \"npm:inspect:test:cov\" \"npm:inspect:outdated\" \"npm:inspect:lint\" \"npm:inspect:vulnerabilities\" \"npm:inspect:license\"",
    "prepare": "husky",
    "test": "jest --passWithNoTests"
  },
  "dependencies": {
    "@nestjs/axios": "3.0.2",
    "@nestjs/common": "10.3.7",
    "@nestjs/config": "3.2.1",
    "@nestjs/core": "10.3.7",
    "@nestjs/platform-express": "10.3.7",
    "@nestjs/swagger": "7.3.1",
    "@nestjs/terminus": "10.2.3",
    "@nestjs/typeorm": "10.0.2",
    "@opentelemetry/api": "1.7.0",
    "@opentelemetry/auto-instrumentations-node": "0.43.0",
    "@opentelemetry/sdk-node": "0.49.1",
    "@opentelemetry/sdk-trace-base": "1.22.0",
    "@opentelemetry/tracing": "^0.24.0",
    "@sideway/formula": "3.0.1",
    "axios": "1.6.8",
    "bcryptjs": "2.4.3",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "cookie-session": "^2.1.0",
    "csrf-csrf": "3.0.3",
    "express-basic-auth": "1.2.1",
    "helmet": "7.1.0",
    "joi": "17.12.2",
    "jsonwebtoken": "9.0.2",
    "mysql": "^2.18.1",
    "rxjs": "7.8.1",
    "typeorm": "0.3.20",
    "winston": "3.13.0"
  },
  "devDependencies": {
    "@nestjs/testing": "10.3.7",
    "@types/bcryptjs": "2.4.6",
    "@types/express": "4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "20.12.0",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "7.4.0",
    "@typescript-eslint/parser": "7.4.0",
    "concurrently": "8.2.2",
    "eslint": "8.57.0",
    "eslint-config-airbnb-typescript": "18.0.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-react-hooks": "4.6.2",
    "eslint-plugin-security": "3.0.0",
    "eslint-plugin-typescript": "^0.14.0",
    "eslint-plugin-unicorn": "52.0.0",
    "husky": "9.0.11",
    "jest": "29.7.0",
    "license-checker": "25.0.1",
    "nodemon": "3.1.0",
    "prettier": "3.2.5",
    "supertest": "6.3.4",
    "ts-jest": "29.1.2",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.4.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
